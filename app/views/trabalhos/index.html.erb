<p id="notice"><%= notice %></p>

<h1>Trabalhos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Disciplina</th>
      <th>Curso</th>
      <th>Data de entrega</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trabalhos.each do |trabalho| %>
      <tr>
        <td><%= trabalho.nome %></td>
        <td><%= trabalho.disciplina %></td>
        <td><%= trabalho.curso %></td>
        <td><%= trabalho.data_de_entrega %></td>
        <td><%= trabalho.descricao %></td>
        <td><%= link_to 'Show', trabalho %></td>
        <td><%= link_to 'Edit', edit_trabalho_path(trabalho) %></td>
        <td><%= link_to 'Destroy', trabalho, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

