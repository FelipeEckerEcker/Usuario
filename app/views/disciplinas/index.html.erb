<p id="notice"><%= notice %></p>

<h1>Disciplinas</h1>

<table>
  <thead>
    <tr>
      <th>Nota</th>
      <th>Presenca</th>
      <th>Notastrabalho</th>
      <th>Notasprovalivro</th>
      <th>Atividades</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplinas.each do |disciplina| %>
      <tr>
        <td><%= disciplina.nota %></td>
        <td><%= disciplina.presenca %></td>
        <td><%= disciplina.notasTrabalho %></td>
        <td><%= disciplina.notasProvaLivro %></td>
        <td><%= disciplina.atividades %></td>
        <td><%= link_to 'Show', disciplina %></td>
        <td><%= link_to 'Edit', edit_disciplina_path(disciplina) %></td>
        <td><%= link_to 'Destroy', disciplina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

