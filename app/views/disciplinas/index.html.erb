<h1>Disciplinas</h1>

<table>
  <thead>
    <tr>
      <th>Notaaluno</th>
      <th>Presencaaula</th>
      <th>Notatrabalho</th>
      <th>Notaprovalivro</th>
      <th>Atividadesextra</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplinas.each do |disciplina| %>
      <tr>
        <td><%= disciplina.notaAluno %></td>
        <td><%= disciplina.presencaAula %></td>
        <td><%= disciplina.notaTrabalho %></td>
